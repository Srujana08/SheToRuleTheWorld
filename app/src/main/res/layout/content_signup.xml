<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    android:paddingTop="24dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.iwh.shetoruletheworld.Signup"
    tools:showIn="@layout/activity_signup">

    <!--<ImageView android:src="@drawable/signup"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:paddingTop="56dp"
        android:layout_weight="1"
        android:layout_marginBottom="24dp"
        android:layout_gravity="center_horizontal" />-->


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="SIGN UP"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColorHighlight="@color/pink"
        android:shadowColor="@color/pink"
        android:shadowRadius="20"
        android:shadowDx="1"
        android:shadowDy="1"/>

    <EditText
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="0.2"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/BtnSignup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:layout_weight="0.2"
        android:background="@color/pink"
        android:textSize="20dp"
        android:textColor="@color/blue"
        android:text="Sign Up" />


    <TextView android:id="@+id/BtnLogin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="Already Registered? Login!"
        android:gravity="center"
        android:layout_weight="0.5"
        android:textColor="@color/white"
        android:textSize="16dip"
        />

</LinearLayout>
